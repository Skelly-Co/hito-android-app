<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.skellyco.hito">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_hito"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_hito"
        android:supportsRtl="true"
        android:theme="@style/AppDarkTheme">

        <activity
            android:name="com.google.firebase.auth.internal.FederatedSignInActivity"
            tools:replace="android:launchMode"
            android:launchMode="standard" />

        <activity android:name=".ui.view.main.ChatActivity"
            android:theme="@style/AppDarkTheme.SlidrActivityTheme"/>
        <activity
            android:name=".ui.view.main.MainActivity"
            android:theme="@style/AppDarkTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.view.entry.SplashActivity"
            android:theme="@style/AppDarkTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.entry.LoginActivity"
            android:theme="@style/AppDarkTheme" />
        <activity
            android:name=".ui.view.entry.CreateAccountActivity"
            android:theme="@style/AppDarkTheme.SlidrActivityTheme" />
        <activity
            android:name=".ui.view.entry.ForgotPasswordActivity"
            android:theme="@style/AppDarkTheme.SlidrActivityTheme" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conMainContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.MainActivity"
    android:background="?attr/colorBackgroundElement">

    <LinearLayout
        android:id="@+id/linTopbar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/topbar_container">

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgrNavbar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/navbar_container"
        android:orientation="horizontal"
        android:gravity="center">

        <Space
            android:id="@+id/spcNavbar1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Space>

        <RadioButton
            android:id="@+id/rbtGroup"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:button="@null"
            android:background="@drawable/group_button">

        </RadioButton>

        <Space
            android:id="@+id/spcNavbar2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Space>

        <RadioButton
            android:id="@+id/rbtLocal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:button="@null"
            android:background="@drawable/local_button">

        </RadioButton>

        <Space
            android:id="@+id/spcNavbar3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Space>

        <RadioButton
            android:id="@+id/rbtHistory"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:button="@null"
            android:background="@drawable/history_button">

        </RadioButton>

        <Space
            android:id="@+id/spcNavbar4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </Space>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>